<section class="flex flex-col justify-center items-center text-zinc-50 w-full mt-14">
  <!-- Back to Dashboard Link -->
  <div class="max-w-6xl w-full p-4">
    <%= link_to admin_root_path, class: "inline-flex items-center text-blue-400 hover:text-blue-300 transition-colors duration-200 mb-4 group" do %>
      <svg class="w-5 h-5 mr-2 transform group-hover:-translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      Back to Admin Dashboard
    <% end %>
  </div>

  <!-- Header Section -->
  <div class="flex justify-between items-center max-w-6xl w-full p-4">
    <div class="flex flex-col">
      <h1 class="text-4xl font-bold text-white mb-2">Song Management</h1>
      <p class="text-gray-400 text-lg">Manage your music library</p>
    </div>
    <%= link_to new_admin_song_path,
        class: "inline-flex items-center px-6 py-3 bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 text-white font-medium rounded-lg transition-all duration-200 transform hover:scale-105 shadow-lg hover:shadow-xl" do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
      </svg>
      Add New Song
    <% end %>
  </div>

  <!-- Filter Controls -->
  <div class="max-w-6xl w-full p-4">
    <div class="bg-gradient-to-r from-gray-800 to-gray-900 border border-gray-700 rounded-lg p-4 mb-6">
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-4">
          <h3 class="text-white font-semibold">Filter Options</h3>
          <div class="flex items-center space-x-2">
            <%= link_to admin_songs_path(show_private: false),
                class: "px-4 py-2 rounded-md text-sm font-medium transition-all duration-200 #{'bg-blue-600 text-white' unless @show_private} #{'bg-gray-600 text-gray-300 hover:bg-gray-500' if @show_private}" do %>
              Public Songs Only
            <% end %>
            <%= link_to admin_songs_path(show_private: true),
                class: "px-4 py-2 rounded-md text-sm font-medium transition-all duration-200 #{'bg-blue-600 text-white' if @show_private} #{'bg-gray-600 text-gray-300 hover:bg-gray-500' unless @show_private}" do %>
              Show All Songs
            <% end %>
          </div>
        </div>
        <div class="text-gray-400 text-sm">
          Showing <%= @songs.count %> song<%= 's' unless @songs.count == 1 %>
          <% if @show_private %>
            <span class="text-yellow-400 ml-2">
              <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
              </svg>
              Including private user songs
            </span>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Songs Grid -->
  <div class="max-w-6xl w-full p-4">
    <% if @songs.any? %>
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
        <% @songs.each do |song| %>
          <div class="group bg-gradient-to-br from-gray-800 to-gray-900 border border-gray-700 rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 hover:scale-105 overflow-hidden">
            <!-- Song Image -->
            <div class="relative overflow-hidden">
              <img class="w-full h-48 object-cover group-hover:scale-110 transition-transform duration-500"
                   src="<%= song.song_image_url.present? ? safe_image_url(song.song_image_url) : (song.album&.cover_art_url.present? ? safe_image_url(song.album.cover_art_url) : (song.artist&.image_url.present? ? safe_image_url(song.artist.image_url) : asset_path('AI-ROBOT-PANIC-left.webp'))) %>"
                   alt="<%= song.title %>"
                   loading="lazy" />
            </div>

            <!-- Song Info -->
            <div class="p-4">
              <h3 class="text-lg font-bold text-white mb-1 group-hover:text-blue-300 transition-colors duration-200 line-clamp-2">
                <%= song.title %>
              </h3>
              <p class="text-gray-400 text-sm mb-1">
                <strong>Artist:</strong> <%= song.artist.name if song.artist %>
              </p>
              <p class="text-gray-400 text-sm mb-1">
                <strong>Album:</strong> <%= song.album.title if song.album %>
              </p>
              <p class="text-gray-400 text-sm mb-1">
                <strong>Status:</strong>
                <% if song.public? %>
                  <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                    <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    Public
                  </span>
                <% else %>
                  <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                    <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 0h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                    </svg>
                    Private
                  </span>
                <% end %>
              </p>
              <% if song.user.present? %>
                <p class="text-gray-400 text-sm mb-4">
                  <strong>Owner:</strong>
                  <span class="text-blue-300"><%= song.user.email %></span>
                </p>
              <% else %>
                <p class="text-gray-400 text-sm mb-4">
                  <strong>Type:</strong>
                  <span class="text-purple-300">Admin Song</span>
                </p>
              <% end %>

              <!-- Action Buttons -->
              <div class="flex gap-2 mt-4">
                <% if song_admin_editable?(song) %>
                  <!-- Edit Button -->
                  <%= link_to edit_admin_song_path(song),
                      class: "flex-1 inline-flex items-center justify-center px-3 py-2 bg-gradient-to-r from-green-600 to-green-700 hover:from-green-700 hover:to-green-800 text-white text-sm font-medium rounded-lg transition-all duration-200 transform hover:scale-105 shadow-md hover:shadow-lg" do %>
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                    </svg>
                    Edit
                  <% end %>

                  <!-- Delete Button -->
                  <%= link_to admin_song_path(song),
                      method: :delete,
                      data: {
                        confirm: "Are you sure you want to delete '#{song.title}'? This action cannot be undone.",
                        turbo_method: :delete
                      },
                      class: "flex-1 inline-flex items-center justify-center px-3 py-2 bg-gradient-to-r from-red-600 to-red-700 hover:from-red-700 hover:to-red-800 text-white text-sm font-medium rounded-lg transition-all duration-200 transform hover:scale-105 shadow-md hover:shadow-lg" do %>
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                    </svg>
                    Delete
                  <% end %>
                <% else %>
                  <!-- Protected Song Notice -->
                  <div class="flex-1 flex items-center justify-center px-3 py-2 bg-gray-700 border border-gray-600 rounded-lg">
                    <svg class="w-4 h-4 mr-2 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 0h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                    </svg>
                    <span class="text-gray-300 text-sm font-medium">Protected</span>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <!-- Empty State -->
      <div class="text-center py-16">
        <div class="mx-auto w-24 h-24 bg-gray-800 rounded-full flex items-center justify-center mb-6">
          <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"></path>
          </svg>
        </div>
        <h3 class="text-2xl font-bold text-white mb-2">No Songs Found</h3>
        <p class="text-gray-400 mb-6">Get started by adding your first song to the library.</p>
        <%= link_to new_admin_song_path,
            class: "inline-flex items-center px-6 py-3 bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 text-white font-medium rounded-lg transition-all duration-200 transform hover:scale-105 shadow-lg hover:shadow-xl" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
          </svg>
          Add First Song
        <% end %>
      </div>
    <% end %>
  </div>
</section>

