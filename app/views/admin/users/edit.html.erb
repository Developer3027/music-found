<section class="flex flex-col w-full text-zinc-50 mt-8 px-4">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold">Edit User</h1>
    <div class="flex gap-2">
      <%= link_to "View User", admin_user_path(@user), class: "bg-blue-600 hover:bg-blue-700 px-4 py-2 rounded-md transition-colors" %>
      <%= link_to "Back to Users", admin_users_path, class: "bg-zinc-700 hover:bg-zinc-600 px-4 py-2 rounded-md transition-colors" %>
    </div>
  </div>

  <div class="max-w-4xl mx-auto w-full">
    <div class="bg-zinc-800 rounded-lg p-6">
      <%= form_with model: [:admin, @user], local: true, class: "space-y-6" do |form| %>
        <% if @user.errors.any? %>
          <div class="bg-red-900/20 border border-red-800 rounded-lg p-4">
            <h3 class="text-lg font-medium text-red-400 mb-2">
              <%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:
            </h3>
            <ul class="list-disc list-inside text-red-300 space-y-1">
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <!-- User Profile Section -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
          <!-- Profile Image -->
          <div class="lg:col-span-1">
            <div class="text-center">
              <% if @user.profile_image.attached? %>
                <%= image_tag @user.profile_image, class: "mx-auto h-32 w-32 rounded-full object-cover" %>
              <% else %>
                <div class="mx-auto h-32 w-32 rounded-full bg-zinc-600 flex items-center justify-center">
                  <span class="text-4xl font-medium text-zinc-300"><%= @user.first_name&.first %><%= @user.last_name&.first %></span>
                </div>
              <% end %>
              <p class="mt-2 text-sm text-zinc-400">Profile image cannot be changed from admin panel</p>
            </div>
          </div>

          <!-- Form Fields -->
          <div class="lg:col-span-2 space-y-6">
            <!-- Basic Information -->
            <div>
              <h3 class="text-lg font-semibold mb-4">Basic Information</h3>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                  <%= form.label :first_name, class: "block text-sm font-medium text-zinc-300 mb-1" %>
                  <%= form.text_field :first_name, 
                                     class: "w-full px-3 py-2 bg-zinc-700 border border-zinc-600 rounded-md text-zinc-50 placeholder-zinc-400 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
                </div>

                <div>
                  <%= form.label :last_name, class: "block text-sm font-medium text-zinc-300 mb-1" %>
                  <%= form.text_field :last_name, 
                                     class: "w-full px-3 py-2 bg-zinc-700 border border-zinc-600 rounded-md text-zinc-50 placeholder-zinc-400 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
                </div>

                <div>
                  <%= form.label :username, class: "block text-sm font-medium text-zinc-300 mb-1" %>
                  <%= form.text_field :username, 
                                     class: "w-full px-3 py-2 bg-zinc-700 border border-zinc-600 rounded-md text-zinc-50 placeholder-zinc-400 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
                </div>

                <div>
                  <%= form.label :email, class: "block text-sm font-medium text-zinc-300 mb-1" %>
                  <%= form.email_field :email, 
                                      class: "w-full px-3 py-2 bg-zinc-700 border border-zinc-600 rounded-md text-zinc-50 placeholder-zinc-400 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
                </div>
              </div>
            </div>

            <!-- Additional Information -->
            <div>
              <h3 class="text-lg font-semibold mb-4">Additional Information</h3>
              <div class="space-y-4">
                <div>
                  <%= form.label :location, class: "block text-sm font-medium text-zinc-300 mb-1" %>
                  <%= form.text_field :location, 
                                     class: "w-full px-3 py-2 bg-zinc-700 border border-zinc-600 rounded-md text-zinc-50 placeholder-zinc-400 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
                </div>

                <div>
                  <%= form.label :bio, class: "block text-sm font-medium text-zinc-300 mb-1" %>
                  <%= form.text_area :bio, rows: 4,
                                    class: "w-full px-3 py-2 bg-zinc-700 border border-zinc-600 rounded-md text-zinc-50 placeholder-zinc-400 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
                </div>
              </div>
            </div>

            <!-- Account Status -->
            <div>
              <h3 class="text-lg font-semibold mb-4">Account Status</h3>
              <div class="space-y-4">
                <div class="flex items-center">
                  <%= form.check_box :active, 
                                    class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-zinc-600 rounded bg-zinc-700" %>
                  <%= form.label :active, "Active Account", class: "ml-2 block text-sm text-zinc-300" %>
                  <p class="ml-6 text-xs text-zinc-400">Uncheck to deactivate the user account</p>
                </div>
              </div>
            </div>

            <!-- Read-only Information -->
            <div>
              <h3 class="text-lg font-semibold mb-4">Account Information (Read-only)</h3>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                  <label class="block text-sm font-medium text-zinc-400">Registration Date</label>
                  <p class="mt-1 text-zinc-50"><%= @user.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
                </div>
                <div>
                  <label class="block text-sm font-medium text-zinc-400">Last Sign In</label>
                  <p class="mt-1 text-zinc-50">
                    <%= @user.last_sign_in_at&.strftime("%B %d, %Y at %I:%M %p") || 'Never' %>
                  </p>
                </div>
                <div>
                  <label class="block text-sm font-medium text-zinc-400">Sign In Count</label>
                  <p class="mt-1 text-zinc-50"><%= @user.sign_in_count || 0 %></p>
                </div>
                <div>
                  <label class="block text-sm font-medium text-zinc-400">Current Status</label>
                  <p class="mt-1">
                    <% case @user.status %>
                    <% when 'active' %>
                      <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">Active</span>
                    <% when 'inactive' %>
                      <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800">Inactive</span>
                    <% when 'banned' %>
                      <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800">Banned</span>
                    <% end %>
                  </p>
                </div>
              </div>
            </div>

            <!-- Ban Information (if banned) -->
            <% if @user.banned? %>
              <div class="bg-red-900/20 border border-red-800 rounded-lg p-4">
                <h3 class="text-lg font-semibold mb-2 text-red-400">Ban Information</h3>
                <div class="space-y-2">
                  <div>
                    <label class="block text-sm font-medium text-zinc-400">Banned At</label>
                    <p class="mt-1 text-zinc-50"><%= @user.banned_at&.strftime("%B %d, %Y at %I:%M %p") %></p>
                  </div>
                  <div>
                    <label class="block text-sm font-medium text-zinc-400">Ban Reason</label>
                    <p class="mt-1 text-zinc-50"><%= @user.ban_reason.presence || 'No reason provided' %></p>
                  </div>
                </div>
                <div class="mt-4">
                  <%= link_to "Unban User", unban_admin_user_path(@user), 
                             method: :patch,
                             data: { confirm: "Are you sure you want to unban this user?" },
                             class: "bg-green-600 hover:bg-green-700 text-white font-medium py-2 px-4 rounded-md transition-colors" %>
                </div>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Form Actions -->
        <div class="flex justify-end space-x-4 pt-6 border-t border-zinc-700">
          <%= link_to "Cancel", admin_user_path(@user), 
                     class: "bg-zinc-600 hover:bg-zinc-700 text-white font-medium py-2 px-4 rounded-md transition-colors" %>
          <%= form.submit "Update User", 
                         class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-md transition-colors cursor-pointer" %>
        </div>
      <% end %>
    </div>
  </div>
</section>