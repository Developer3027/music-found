<section class="flex flex-col w-full text-zinc-50 mt-8 px-4">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold">User Management</h1>
    <%= link_to "Back to Dashboard", admin_root_path, class: "bg-zinc-700 hover:bg-zinc-600 px-4 py-2 rounded-md transition-colors" %>
  </div>

  <!-- User Statistics -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
    <div class="bg-zinc-800 p-4 rounded-lg">
      <h3 class="text-lg font-semibold text-zinc-300">Total Users</h3>
      <p class="text-2xl font-bold text-blue-400"><%= @total_users %></p>
    </div>
    <div class="bg-zinc-800 p-4 rounded-lg">
      <h3 class="text-lg font-semibold text-zinc-300">Active Users</h3>
      <p class="text-2xl font-bold text-green-400"><%= @active_users %></p>
    </div>
    <div class="bg-zinc-800 p-4 rounded-lg">
      <h3 class="text-lg font-semibold text-zinc-300">Banned Users</h3>
      <p class="text-2xl font-bold text-red-400"><%= @banned_users %></p>
    </div>
    <div class="bg-zinc-800 p-4 rounded-lg">
      <h3 class="text-lg font-semibold text-zinc-300">New This Week</h3>
      <p class="text-2xl font-bold text-yellow-400"><%= @new_users_this_week %></p>
    </div>
  </div>

  <!-- Search and Filter Form -->
  <div class="bg-zinc-800 p-4 rounded-lg mb-6">
    <%= form_with url: admin_users_path, method: :get, local: true, class: "flex flex-wrap gap-4 items-end" do |form| %>
      <div class="flex-1 min-w-64">
        <%= form.text_field :search, placeholder: "Search by name, email, or username...", 
                           value: params[:search], 
                           class: "w-full px-3 py-2 bg-zinc-700 border border-zinc-600 rounded-md text-zinc-50 placeholder-zinc-400 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>
      
      <div>
        <%= form.select :status, 
                       options_for_select([
                         ['All Users', ''],
                         ['Active', 'active'],
                         ['Inactive', 'inactive'],
                         ['Banned', 'banned']
                       ], params[:status]),
                       {},
                       { class: "px-3 py-2 bg-zinc-700 border border-zinc-600 rounded-md text-zinc-50 focus:outline-none focus:ring-2 focus:ring-blue-500" } %>
      </div>
      
      <div>
        <%= form.select :sort, 
                       options_for_select([
                         ['Recent', ''],
                         ['Name', 'name'],
                         ['Email', 'email'],
                         ['Registration Date', 'created_at']
                       ], params[:sort]),
                       {},
                       { class: "px-3 py-2 bg-zinc-700 border border-zinc-600 rounded-md text-zinc-50 focus:outline-none focus:ring-2 focus:ring-blue-500" } %>
      </div>
      
      <div class="flex gap-2">
        <%= form.submit "Filter", class: "bg-blue-600 hover:bg-blue-700 px-4 py-2 rounded-md transition-colors cursor-pointer" %>
        <%= link_to "Clear", admin_users_path, class: "bg-zinc-600 hover:bg-zinc-700 px-4 py-2 rounded-md transition-colors" %>
      </div>
    <% end %>
  </div>

  <!-- Users Table -->
  <div class="bg-zinc-800 rounded-lg overflow-hidden">
    <div class="overflow-x-auto">
      <table class="w-full">
        <thead class="bg-zinc-700">
          <tr>
            <th class="px-4 py-3 text-left text-sm font-medium text-zinc-300">User</th>
            <th class="px-4 py-3 text-left text-sm font-medium text-zinc-300">Email</th>
            <th class="px-4 py-3 text-left text-sm font-medium text-zinc-300">Status</th>
            <th class="px-4 py-3 text-left text-sm font-medium text-zinc-300">Activity</th>
            <th class="px-4 py-3 text-left text-sm font-medium text-zinc-300">Registered</th>
            <th class="px-4 py-3 text-left text-sm font-medium text-zinc-300">Actions</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-zinc-700">
          <% @users.each do |user| %>
            <tr class="hover:bg-zinc-750">
              <td class="px-4 py-3">
                <div class="flex items-center">
                  <div class="flex-shrink-0 h-10 w-10">
                    <% if user.profile_image.attached? %>
                      <%= image_tag user.profile_image, class: "h-10 w-10 rounded-full object-cover" %>
                    <% else %>
                      <div class="h-10 w-10 rounded-full bg-zinc-600 flex items-center justify-center">
                        <span class="text-sm font-medium text-zinc-300"><%= user.first_name&.first %><%= user.last_name&.first %></span>
                      </div>
                    <% end %>
                  </div>
                  <div class="ml-3">
                    <div class="text-sm font-medium text-zinc-50"><%= user.full_name %></div>
                    <div class="text-sm text-zinc-400">@<%= user.username %></div>
                  </div>
                </div>
              </td>
              <td class="px-4 py-3 text-sm text-zinc-300"><%= user.email %></td>
              <td class="px-4 py-3">
                <% case user.status %>
                <% when 'active' %>
                  <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">Active</span>
                <% when 'inactive' %>
                  <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800">Inactive</span>
                <% when 'banned' %>
                  <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800">Banned</span>
                <% end %>
              </td>
              <td class="px-4 py-3 text-sm text-zinc-300">
                <div><%= pluralize(user.songs.count, 'song') %></div>
                <div><%= pluralize(user.playlists.count, 'playlist') %></div>
              </td>
              <td class="px-4 py-3 text-sm text-zinc-300">
                <%= user.created_at.strftime("%b %d, %Y") %>
              </td>
              <td class="px-4 py-3 text-sm">
                <div class="flex space-x-2">
                  <%= link_to "View", admin_user_path(user), 
                             class: "text-blue-400 hover:text-blue-300 transition-colors" %>
                  <%= link_to "Edit", edit_admin_user_path(user), 
                             class: "text-yellow-400 hover:text-yellow-300 transition-colors" %>
                  <% if user.banned? %>
                    <%= link_to "Unban", unban_admin_user_path(user), 
                               method: :patch,
                               data: { confirm: "Are you sure you want to unban this user?" },
                               class: "text-green-400 hover:text-green-300 transition-colors" %>
                  <% else %>
                    <%= link_to "Ban", ban_admin_user_path(user), 
                               method: :patch,
                               data: { confirm: "Are you sure you want to ban this user?" },
                               class: "text-red-400 hover:text-red-300 transition-colors" %>
                  <% end %>
                  <%= link_to "Delete", admin_user_path(user), 
                             method: :delete,
                             data: { confirm: "Are you sure? This action cannot be undone." },
                             class: "text-red-500 hover:text-red-400 transition-colors" %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Pagination -->
  <% if respond_to?(:paginate) && @users.respond_to?(:current_page) %>
    <div class="mt-6 flex justify-center">
      <%= paginate @users, theme: 'twitter-bootstrap-4', 
                   pagination_class: "pagination justify-content-center",
                   nav_class: "d-flex justify-content-center" %>
    </div>
  <% end %>
</section>