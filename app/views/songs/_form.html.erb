<%= form_with(model: @song, local: true) do |form| %>
  <% if form.object.errors.any? %>
        <div>
            <% form.object.errors.full_messages.each do |message|  %>
            <div class="text-red-500"><%= message %></div>
            <% end %>
        </div>
    <% end %>

  <div class="">

    <% if song.song_image.present? %>
      <div id="<%= dom_id(song, :song_image) %>" class="flex flex-col justify-center items-center">
          <%= image_tag song.song_image, class: "w-1/3 py-2" %>
          <%= link_to "Remove image", destroy_image_song_path(song), class: "border border-input-background rounded bg-red-400 py-1 px-2 my-2", data: { turbo_method: :delete, turbo_confirm: "are you sure?" } %>
      </div>
    <% end %>

    <div class="rounded-sm p-2">
      <div class="flex items-center my-4">
        <%= form.label :song_image, "Select Image" %>&nbsp;
        <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 13V8m0 8h.01M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"/>
          <span class="text-sm">w-640 x h-640 - 5MB max</span>
        </svg>
      </div>
      <%= form.file_field :song_image, class: "block w-full text-sm border rounded-sm cursor-pointer text-zinc-800 focus:outline-none bg-gray-100 border-gray-100", accept: "image/jpeg,image/png,image/webp" %>
    </div>
    
    <div class="rounded-sm p-2">
      <div class="flex items-center my-4">
        <%= form.label :song_file, "Select Audio File" %>&nbsp;
        <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 13V8m0 8h.01M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"/>
          <span class="text-sm">MP3, WAV, OGG, M4A - 50MB max</span>
        </svg>
      </div>
      <%= form.file_field :song_file, class: "block w-full text-sm border rounded-sm cursor-pointer text-zinc-800 focus:outline-none bg-gray-100 border-gray-100", accept: "audio/mpeg,audio/mp3,audio/wav,audio/ogg,audio/m4a" %>
    </div>
    <div class="border border-gray-100 rounded-sm p-2 mt-1">
      <h2 class="text-xl font-medium text-gray-100 align-middle text-center p-2">Song Details</h2>
      <div class="flex justify-between items-center my-2">
        <%= form.label :artist, class: "w-52" %>
        <%= form.text_field :artist, class: "rounded-sm border border-slate-600 bg-gray-100 text-zinc-800 w-full", placeholder: "Artist name" %>
      </div>
      <div class="flex justify-between items-center my-2">
        <%= form.label :album, class: "w-52" %>
        <%= form.text_field :album, class: "rounded-sm border border-slate-600 bg-gray-100 text-zinc-800 w-full", placeholder: "Album name (optional)" %>
      </div>
      <div class="flex justify-between items-center my-2">
        <%= form.label :title, class: "w-52" %>
        <%= form.text_field :title, class: "rounded-sm border border-slate-600 bg-gray-100 text-zinc-800 w-full", placeholder: "Song title" %>
      </div>
      <div class="flex justify-between items-center my-2">
        <%= form.label :genre_ids, "Genres", class: "w-52" %>
        <%= form.collection_select :genre_ids, Genre.all, :id, :name, { prompt: "Select genres" }, { multiple: true, class: "rounded-sm border border-slate-600 bg-gray-100 text-zinc-800 w-full" } %>
      </div>
    </div>
    <div class="flex gap-2 mt-4">
      <%= form.submit "Upload Song", class: "border border-gray-100 bg-slate-900 text-gray-100 rounded-sm px-6 py-2" %>
      <%= link_to "Cancel", my_music_path, class: "border border-gray-300 bg-gray-200 text-gray-800 rounded-sm px-6 py-2", data: { turbo_frame: "music-frame" } %>
    </div>
  </div>
<% end %>