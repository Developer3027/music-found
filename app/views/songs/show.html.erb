<section class="flex justify-center items-center w-full text-zinc-50 mt-14">
  <div class="flex justify-center items-center lg:bg-slate-600 rounded-md p-6">
    <div class="flex flex-col justify-start items-start pb-5">
      <h1 class="text-2xl font-bold text-gray-100 mb-4"><%= @song.title %></h1>
      
      <div class="bg-slate-700 rounded-md p-4 w-full max-w-md">
        <% if @song.song_image_url.present? %>
          <div class="flex justify-center mb-4">
            <%= image_tag @song.song_image_url, class: "w-48 h-48 object-cover rounded-md" %>
          </div>
        <% end %>
        
        <div class="space-y-2">
          <div class="flex justify-between">
            <span class="text-gray-300">Artist:</span>
            <span class="text-white font-medium"><%= @song.artist_name %></span>
          </div>
          
          <div class="flex justify-between">
            <span class="text-gray-300">Album:</span>
            <span class="text-white font-medium"><%= @song.album_title %></span>
          </div>
          
          <div class="flex justify-between">
            <span class="text-gray-300">Title:</span>
            <span class="text-white font-medium"><%= @song.title %></span>
          </div>
          
          <% if @song.genres.any? %>
            <div class="flex justify-between">
              <span class="text-gray-300">Genres:</span>
              <span class="text-white font-medium"><%= @song.genres.pluck(:name).join(", ") %></span>
            </div>
          <% end %>
        </div>
        
        <% if @song.song_file_url.present? %>
          <div class="mt-4">
            <audio controls class="w-full">
              <source src="<%= @song.song_file_url %>" type="audio/mpeg">
              Your browser does not support the audio element.
            </audio>
          </div>
        <% end %>
        
        <div class="flex gap-2 mt-4">
          <%= link_to "Edit", edit_song_path(@song), class: "border border-gray-100 bg-slate-900 text-gray-100 rounded-sm px-6 py-2" %>
          <%= link_to "Back to My Music", my_music_path, class: "border border-gray-300 bg-gray-200 text-gray-800 rounded-sm px-6 py-2" %>
        </div>
      </div>
    </div>
  </div>
</section>