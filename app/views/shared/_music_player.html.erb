<!-- Music Player -->
<div data-controller="music--player" class="flex flex-col top-0 w-full">
  <!-- Banner Section -->
  <!-- This partial will change the default banner image to the song's or playlist's image -->
  <%= render "music/components/player/banner", 
             banner_image: @banner_image, 
             title: @banner_title, 
             subtitle: @banner_subtitle %>

  <div class="flex justify-center items-center bg-black text-white p-4">
    <div data-music--player-target="currentTime" class="mx-2">0:00</div>

    <%= render "music/components/player/waveform" %>
    
    <div data-music--player-target="duration" class="mx-2">0:00</div>
    <!-- Replace the old buttons with: -->
    <%= render "music/components/player/play_pause_controls", playing: @playing %>
    <!-- Replace autoplay toggle with: -->
    <%= render "music/components/player/autoplay_toggle" %>
  </div>
</div>