<div class="flex" 
     data-controller="play" 
     data-play-url-value="<%= song.song_file_url %>" 
     data-play-audio-player-url-value="<%= audio_player_music_index_path(song_id: song.id) %>" 
     data-play-song-id-value="<%= song.id %>" 
     data-action="audio-player-switched@window->play#audioChanged">
     <div id="waveform"></div>
  <%= link_to "", data: { action: "play#toggle" } do %>
    <svg class="w-6 h-6 text-gray-800 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 24 24" data-play-target="playIcon">
      <path fill-rule="evenodd" d="M8.6 5.2A1 1 0 0 0 7 6v12a1 1 0 0 0 1.6.8l8-6a1 1 0 0 0 0-1.6l-8-6Z" clip-rule="evenodd"/>
    </svg>

    <svg class="w-6 h-6 text-gray-800 dark:text-white hidden" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 24 24" data-play-target="pauseIcon">
      <path fill-rule="evenodd" d="M8 5a2 2 0 0 0-2 2v10a2 2 0 0 0 2 2h1a2 2 0 0 0 2-2V7a2 2 0 0 0-2-2H8Zm7 0a2 2 0 0 0-2 2v10a2 2 0 0 0 2 2h1a2 2 0 0 0 2-2V7a2 2 0 0 0-2-2h-1Z" clip-rule="evenodd"/>
    </svg>
  <% end %>
</div>