<div class="max-w-4xl mx-auto p-6">
  <div class="bg-white rounded-lg shadow-lg overflow-hidden">
    <!-- Profile Header -->
    <div class="bg-gradient-to-r from-purple-600 to-blue-600 px-6 py-8">
      <div class="flex items-center space-x-6">
        <div class="flex-shrink-0">
          <% if @user.profile_image.attached? %>
            <%= image_tag @user.profile_image, class: "w-24 h-24 rounded-full border-4 border-white object-cover" %>
          <% else %>
            <div class="w-24 h-24 rounded-full border-4 border-white bg-gray-300 flex items-center justify-center">
              <span class="text-2xl font-bold text-gray-600"><%= @user.first_name&.first %><%= @user.last_name&.first %></span>
            </div>
          <% end %>
        </div>
        <div class="text-white">
          <h1 class="text-3xl font-bold"><%= @user.full_name %></h1>
          <p class="text-xl opacity-90">@<%= @user.username %></p>
          <% if @user.location.present? %>
            <p class="text-sm opacity-75 mt-1">üìç <%= @user.location %></p>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Profile Content -->
    <div class="p-6">
      <div class="flex justify-between items-start mb-6">
        <div class="flex-1">
          <% if @user.bio.present? %>
            <div class="mb-4">
              <h3 class="text-lg font-semibold text-gray-800 mb-2">About</h3>
              <p class="text-gray-600 leading-relaxed"><%= simple_format(@user.bio) %></p>
            </div>
          <% end %>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm text-gray-600">
            <div>
              <span class="font-medium">Email:</span> <%= @user.email %>
            </div>
            <% if @user.age %>
              <div>
                <span class="font-medium">Age:</span> <%= @user.age %> years old
              </div>
            <% end %>
            <div>
              <span class="font-medium">Member since:</span> <%= @user.created_at.strftime("%B %Y") %>
            </div>
            <div>
              <span class="font-medium">Last seen:</span> <%= @user.current_sign_in_at&.strftime("%B %d, %Y") || "Never" %>
            </div>
          </div>
        </div>

        <div class="flex flex-col ml-6 space-y-2">
          <%= link_to "Edit Profile", edit_profile_path, class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg transition-colors" %>
          <%= link_to "Home", root_path, class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg transition-colors" %>
        </div>
        
      </div>

      <!-- Music Stats -->
      <div class="border-t pt-6">
        <h3 class="text-lg font-semibold text-gray-800 mb-4">Music Activity</h3>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <div class="bg-gray-50 p-4 rounded-lg text-center">
            <div class="text-2xl font-bold text-purple-600"><%= @user.playlists.count %></div>
            <div class="text-sm text-gray-600">Playlists Created</div>
          </div>
          <div class="bg-gray-50 p-4 rounded-lg text-center">
            <div class="text-2xl font-bold text-blue-600"><%= @user.songs.count %></div>
            <div class="text-sm text-gray-600">Songs Uploaded</div>
          </div>
          <div class="bg-gray-50 p-4 rounded-lg text-center">
            <div class="text-2xl font-bold text-green-600"><%= @user.sign_in_count || 0 %></div>
            <div class="text-sm text-gray-600">Total Logins</div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
