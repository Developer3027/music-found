<%= form_with(model: @artist, local: true) do |form| %>
  <% if form.object.errors.any? %>
    <div>
      <% form.object.errors.full_messages.each do |message|  %>
        <div class="text-red-500"><%= message %></div>
      <% end %>
    </div>
  <% end %>

  <div class="">
    <!-- Current Artist Image Display -->
    <% if @artist.image_url.present? %>
      <div id="<%= dom_id(@artist, :artist_image) %>" class="flex flex-col justify-center items-center">
        <%= image_tag @artist.image_url, class: "w-1/3 py-2" %>
        <%= link_to "Remove image", destroy_image_artist_path(@artist), class: "border border-input-background rounded bg-red-400 py-1 px-2 my-2", data: { turbo_method: :delete, turbo_confirm: "are you sure?" } %>
      </div>
    <% end %>

    <!-- Artist Image Upload -->
    <div class="rounded-sm p-2" data-controller="file-upload">
      <div class="flex items-center my-4">
        <%= label_tag :artist_image_upload, "Select Artist Image" %>&nbsp;
        <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 13V8m0 8h.01M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"/>
          <span class="text-sm">w-640 x h-640 - 5MB max</span>
        </svg>
      </div>
      <%= file_field_tag :artist_image_upload,
          class: "block w-full text-sm border rounded-sm cursor-pointer text-zinc-800 focus:outline-none bg-gray-100 border-gray-100",
          accept: "image/jpeg,image/png,image/webp",
          data: {
            target: "#artist_image_url",
            action: "change->file-upload#upload"
          } %>
          
      <div class="upload-status" id="image-upload-status"></div>
      
      <%# This hidden field stores the S3 URL %>
      <%= form.hidden_field :image_url %>
    </div>
    
    <!-- Current Artist Banner Video Display -->
    <% if @artist.banner_video_url.present? %>
      <div id="<%= dom_id(@artist, :artist_banner_video) %>" class="flex flex-col justify-center items-center">
        <div class="w-1/2 py-2">
          <video class="w-full h-auto max-h-64" controls>
            <source src="<%= @artist.banner_video_url %>" type="video/mp4">
            Your browser does not support the video element.
          </video>
        </div>
        <%= link_to "Remove banner video", destroy_banner_video_artist_path(@artist), class: "border border-input-background rounded bg-red-400 py-1 px-2 my-2", data: { turbo_method: :delete, turbo_confirm: "are you sure?" } %>
      </div>
    <% end %>

    <!-- Artist Banner Video Upload -->
    <div class="rounded-sm p-2" data-controller="file-upload">
      <div class="flex items-center my-4">
        <%= label_tag :artist_banner_video_upload, "Select Artist Banner Video" %>&nbsp;
        <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 13V8m0 8h.01M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"/>
          <span class="text-sm">1280x300 recommended - 20MB MP4 max</span>
        </svg>
      </div>
      <%= file_field_tag :artist_banner_video_upload,
          class: "block w-full text-sm border rounded-sm cursor-pointer text-zinc-800 focus:outline-none bg-gray-100 border-gray-100",
          accept: "video/mp4",
          data: {
            target: "#artist_banner_video_url",
            action: "change->file-upload#upload"
          } %>
          
      <div class="upload-status" id="banner-video-upload-status"></div>
      
      <%# This hidden field stores the S3 URL %>
      <%= form.hidden_field :banner_video_url %>
    </div>
    
    <!-- Artist Details -->
    <div class="border border-gray-100 rounded-sm p-2 mt-1">
      <h2 class="text-xl font-medium text-gray-100 align-middle text-center p-2">Artist Details</h2>
      
      <!-- Artist Name -->
      <div class="flex justify-between items-center my-2">
        <%= form.label :name, class: "w-52" %>
        <%= form.text_field :name, class: "rounded-sm border border-slate-600 bg-gray-100 text-zinc-800 w-full", placeholder: "Artist name" %>
      </div>
      
      <!-- Artist Bio -->
      <div class="flex justify-between items-start my-2">
        <%= form.label :bio, class: "w-52 pt-2" %>
        <%= form.text_area :bio, rows: 4, class: "rounded-sm border border-slate-600 bg-gray-100 text-zinc-800 w-full", placeholder: "Artist biography (optional)" %>
      </div>
    </div>
    
    <!-- Form Actions -->
    <div class="flex gap-2 mt-4">
      <%= form.submit (@artist.persisted? ? "Update Artist" : "Create Artist"), class: "border border-gray-100 bg-slate-900 text-gray-100 rounded-sm px-6 py-2" %>
      <%= link_to "Cancel", (@artist.persisted? ? artist_path(@artist) : artists_path), class: "border border-gray-300 bg-gray-200 text-gray-800 rounded-sm px-6 py-2" %>
    </div>
  </div>
<% end %>