<div class="relative w-full h-[200px] bg-gradient-to-r from-purple-600 to-purple-400"
     data-controller="music--banner"
     data-music--banner-target="container">
    <!-- Dynamic Image -->
    <%= image_tag(
      banner_image || "/music_files/home-banner.jpg",
      class: "w-full h-full object-cover opacity-80",
      alt: "Banner Image",
      data: { "music--banner-target": "image" }
    ) %>
    
    <!-- Overlay (positioned absolutely over image) -->
    <div class="absolute inset-0 bg-gradient-to-r from-purple-900/70 via-purple-800/50 to-transparent flex items-center p-6"
     data-music--banner-target="overlay">
      <div>
        <h2 class="text-white text-3xl sm:text-4xl font-bold mb-2 drop-shadow-lg"
            data-music--banner-target="title"><%= title || "Welcome to Music Found" %></h2>
        <p class="text-purple-100 text-lg drop-shadow-md"
          data-music--banner-target="subtitle"><%= subtitle || "Discover your next favorite song" %></p>
      </div>
    </div>
  </div>