<section class="flex justify-center items-center bg-zinc-900 text-zinc-100 w-full min-h-screen">
  <div class="flex w-full max-w-5xl">
    <!-- Sidebar (fixed width) -->
    <%= render "music/components/sidebar/root" %>

    <!-- Main Content Area (flexible width) -->
    <div class="bg-[linear-gradient(to_bottom,#856144_0%,#856144_40%,#7D6757_60%,#6C747C_80%,#D9D9D9_100%)] relative flex flex-col h-screen">
      <!-- Music Player (fixed height) -->
      <div class="h-80 sticky top-0 z-20 bg-[#856144]">
        <%= render partial: "shared/music_player" %>
      </div>
      
      <!-- Scrollable Turbo Frame Content -->
      <div class="flex-1 overflow-y-auto">
        <%= turbo_frame_tag "music-frame" do %>
          <%= render partial: "music/turbo_frames/index", songs: @songs %>
        <% end %>
      </div>
    </div>
  </div>
</section>