<div class="p-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">My Music</h1>
    <div class="flex gap-3">
      <%= link_to "Upload Song", new_song_path, class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg font-medium transition-colors" %>
      <%= link_to "Create Playlist", new_playlist_path, class: "bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg font-medium transition-colors" %>
    </div>
  </div>

  <!-- User Stats -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8">
    <div class="bg-white rounded-lg shadow p-4">
      <div class="flex items-center">
        <div class="p-2 bg-blue-100 rounded-lg">
          <%= render "icons/_note" %>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-600">My Songs</p>
          <p class="text-2xl font-bold text-gray-900"><%= @my_songs.count %></p>
        </div>
      </div>
    </div>
    
    <div class="bg-white rounded-lg shadow p-4">
      <div class="flex items-center">
        <div class="p-2 bg-green-100 rounded-lg">
          <%= render "icons/_library" %>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-600">My Playlists</p>
          <p class="text-2xl font-bold text-gray-900"><%= @my_playlists.count %></p>
        </div>
      </div>
    </div>
    
    <div class="bg-white rounded-lg shadow p-4">
      <div class="flex items-center">
        <div class="p-2 bg-purple-100 rounded-lg">
          <%= render "icons/_trending" %>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-600">Public Playlists</p>
          <p class="text-2xl font-bold text-gray-900"><%= @my_playlists.where(is_public: true).count %></p>
        </div>
      </div>
    </div>
  </div>

  <!-- My Songs Section -->
  <div class="mb-8">
    <div class="flex justify-between items-center mb-4">
      <h2 class="text-2xl font-bold text-gray-900">My Songs</h2>
      <% if @my_songs.any? %>
        <span class="text-sm text-gray-600"><%= @my_songs.count %> songs</span>
      <% end %>
    </div>
    
    <% if @my_songs.any? %>
      <div class="bg-white rounded-lg shadow overflow-hidden">
        <div class="divide-y divide-gray-200">
          <% @my_songs.each_with_index do |song, index| %>
            <div class="p-4 hover:bg-gray-50 flex items-center justify-between">
              <div class="flex items-center space-x-4">
                <div class="flex-shrink-0">
                  <% if song.image_url %>
                    <%= image_tag song.image_url, class: "h-12 w-12 rounded-lg object-cover" %>
                  <% else %>
                    <div class="h-12 w-12 bg-gray-200 rounded-lg flex items-center justify-center">
                      <%= render "icons/_note" %>
                    </div>
                  <% end %>
                </div>
                <div class="flex-1 min-w-0">
                  <p class="text-sm font-medium text-gray-900 truncate"><%= song.title %></p>
                  <p class="text-sm text-gray-500 truncate"><%= song.artist %></p>
                  <% if song.album.present? %>
                    <p class="text-xs text-gray-400 truncate"><%= song.album %></p>
                  <% end %>
                </div>
                <div class="flex items-center space-x-2">
                  <%= link_to "Edit", edit_song_path(song), class: "text-blue-600 hover:text-blue-800 text-sm font-medium" %>
                  <%= link_to "Delete", song_path(song), method: :delete, 
                      class: "text-red-600 hover:text-red-800 text-sm font-medium",
                      data: { confirm: "Are you sure you want to delete this song?" } %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% else %>
      <div class="bg-white rounded-lg shadow p-8 text-center">
        <div class="mx-auto h-12 w-12 text-gray-400">
          <%= render "icons/_note" %>
        </div>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No songs yet</h3>
        <p class="mt-1 text-sm text-gray-500">Get started by uploading your first song.</p>
        <div class="mt-6">
          <%= link_to "Upload Song", new_song_path, class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg font-medium transition-colors" %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- My Playlists Section -->
  <div>
    <div class="flex justify-between items-center mb-4">
      <h2 class="text-2xl font-bold text-gray-900">My Playlists</h2>
      <% if @my_playlists.any? %>
        <span class="text-sm text-gray-600"><%= @my_playlists.count %> playlists</span>
      <% end %>
    </div>
    
    <% if @my_playlists.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @my_playlists.each do |playlist| %>
          <div class="bg-white rounded-lg shadow overflow-hidden hover:shadow-md transition-shadow">
            <div class="aspect-w-16 aspect-h-9">
              <% if playlist.cover_image %>
                <%= image_tag playlist.cover_image, class: "w-full h-48 object-cover" %>
              <% else %>
                <div class="w-full h-48 bg-gradient-to-br from-blue-400 to-purple-500 flex items-center justify-center">
                  <%= render "icons/_library" %>
                </div>
              <% end %>
            </div>
            <div class="p-4">
              <h3 class="text-lg font-medium text-gray-900 truncate"><%= playlist.name %></h3>
              <p class="text-sm text-gray-500 mt-1"><%= playlist.song_count %> songs</p>
              <% if playlist.description.present? %>
                <p class="text-sm text-gray-600 mt-2 line-clamp-2"><%= playlist.description %></p>
              <% end %>
              <div class="flex items-center justify-between mt-4">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= playlist.is_public? ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
                  <%= playlist.is_public? ? 'Public' : 'Private' %>
                </span>
                <div class="flex space-x-2">
                  <%= link_to "Edit", edit_playlist_path(playlist), class: "text-blue-600 hover:text-blue-800 text-sm font-medium" %>
                  <%= link_to "Delete", playlist_path(playlist), method: :delete, 
                      class: "text-red-600 hover:text-red-800 text-sm font-medium",
                      data: { confirm: "Are you sure you want to delete this playlist?" } %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="bg-white rounded-lg shadow p-8 text-center">
        <div class="mx-auto h-12 w-12 text-gray-400">
          <%= render "icons/_library" %>
        </div>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No playlists yet</h3>
        <p class="mt-1 text-sm text-gray-500">Create your first playlist to organize your music.</p>
        <div class="mt-6">
          <%= link_to "Create Playlist", new_playlist_path, class: "bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg font-medium transition-colors" %>
        </div>
      </div>
    <% end %>
  </div>
</div>