<!-- Current Index Content -->
<div class="w-full flex flex-col m-auto  text-[#1E1E1E]">
  <h2 class="kanit font-medium mx-4 py-2">All Songs</h2>
  <hr class="mb-3 mx-4">
  <div data-controller="music--song-list" 
        data-music--song-list-songs-value="<%= @songs_data %>"
        class="flex flex-wrap justify-center items-start p-4 gap-4">
    <% @songs.each do |song| %>
      <div class="m-auto">
        <%= render partial: "music/components/smart-image", locals: { controller_name: "smart-image", song: song } %>
      </div>
    <% end %>
  </div>
</div>