<section class="flex justify-center items-center w-full text-zinc-50 mt-14">
  <div class="w-full max-w-6xl">
    <div class="p-6">
      <!-- Album Header -->
      <div class="bg-white rounded-lg shadow overflow-hidden mb-8">
        <div class="flex flex-col md:flex-row">
          <div class="md:w-1/3">
            <% if @album.cover_url %>
              <%= image_tag @album.cover_url, class: "w-full h-64 md:h-80 object-cover" %>
            <% else %>
              <div class="w-full h-64 md:h-80 bg-gradient-to-br from-green-400 to-blue-500 flex items-center justify-center">
                <div class="text-white text-6xl">
                  <%= render "icons/record" %>
                </div>
              </div>
            <% end %>
          </div>
          <div class="md:w-2/3 p-6">
            <div class="flex justify-between items-start mb-4">
              <div>
                <h1 class="text-3xl font-bold text-gray-900 mb-2"><%= @album.title %></h1>
                <div class="flex items-center space-x-4 text-sm text-gray-500 mb-2">
                  <span>by <%= link_to @album.artist_name, artist_path(@album.artist), class: "text-blue-600 hover:text-blue-800 font-medium" %></span>
                  <% if @album.genre %>
                    <span>•</span>
                    <span><%= @album.genre.name %></span>
                  <% end %>
                </div>
                <div class="flex items-center space-x-4 text-sm text-gray-500">
                  <span><%= @album.songs.count %> songs</span>
                </div>
              </div>
              <div class="flex space-x-2">
                <%= link_to "Edit", edit_album_path(@album), class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg font-medium transition-colors" %>
                <%= link_to "Delete", album_path(@album), method: :delete,
                    class: "bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-lg font-medium transition-colors",
                    data: { confirm: "Are you sure you want to delete this album? This will also delete all songs in this album." } %>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Songs Section -->
      <div>
        <div class="flex justify-between items-center mb-6">
          <h2 class="text-2xl font-bold text-gray-900">Songs</h2>
          <%= link_to "Add Song", new_song_path(artist: @album.artist_name, album: @album.title), class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg font-medium transition-colors" %>
        </div>
        
        <% if @album.songs.any? %>
          <div class="bg-white rounded-lg shadow overflow-hidden">
            <div class="divide-y divide-gray-200">
              <% @album.songs.each_with_index do |song, index| %>
                <div class="p-4 hover:bg-gray-50 flex items-center justify-between">
                  <div class="flex items-center space-x-4">
                    <div class="flex-shrink-0 w-8 text-center">
                      <span class="text-sm text-gray-500"><%= index + 1 %></span>
                    </div>
                    <div class="flex-shrink-0">
                      <% if song.image_url %>
                        <%= image_tag song.image_url, class: "h-12 w-12 rounded-lg object-cover" %>
                      <% else %>
                        <div class="h-12 w-12 bg-gray-200 rounded-lg flex items-center justify-center">
                          <%= render "icons/note" %>
                        </div>
                      <% end %>
                    </div>
                    <div class="flex-1 min-w-0">
                      <p class="text-sm font-medium text-gray-900 truncate"><%= song.title %></p>
                      <p class="text-sm text-gray-500 truncate"><%= song.artist %></p>
                      <% if song.genres.any? %>
                        <div class="flex flex-wrap gap-1 mt-1">
                          <% song.genres.each do |genre| %>
                            <span class="inline-block bg-gray-100 text-gray-700 text-xs px-2 py-1 rounded-full">
                              <%= genre.name %>
                            </span>
                          <% end %>
                        </div>
                      <% end %>
                    </div>
                    <div class="flex items-center space-x-2">
                      <%= link_to "Edit", edit_song_path(song), class: "text-blue-600 hover:text-blue-800 text-sm font-medium" %>
                      <%= link_to "Delete", song_path(song), method: :delete,
                          class: "text-red-600 hover:text-red-800 text-sm font-medium",
                          data: { confirm: "Are you sure you want to delete this song?" } %>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        <% else %>
          <div class="bg-white rounded-lg shadow p-8 text-center">
            <div class="mx-auto h-12 w-12 text-gray-400">
              <%= render "icons/note" %>
            </div>
            <h3 class="mt-2 text-sm font-medium text-gray-900">No songs yet</h3>
            <p class="mt-1 text-sm text-gray-500">Add the first song to this album.</p>
            <div class="mt-6">
              <%= link_to "Add Song", new_song_path(artist: @album.artist_name, album: @album.title), class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg font-medium transition-colors" %>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Navigation Links -->
      <div class="mt-8 flex justify-center space-x-4">
        <%= link_to "← Back to Albums", albums_path, class: "text-blue-600 hover:text-blue-800 font-medium" %>
        <span class="text-gray-400">•</span>
        <%= link_to "View Artist", artist_path(@album.artist), class: "text-blue-600 hover:text-blue-800 font-medium" %>
      </div>
    </div>
  </div>
</section>